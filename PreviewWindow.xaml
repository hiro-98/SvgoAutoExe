<Window x:Class="SvgoAutoExe.PreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SvgoAutoExe" mc:Ignorable="d" Closing="PreviewWindowClosing" Title="Preview" Height="800" Width="800">
    <Grid>
        <!-- グリッド全体を定義 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- ブラウザ -->
        <Grid Grid.Row="0" Grid.Column="0">
            <WebBrowser x:Name="Browser"/>
        </Grid>
        <!-- ボタン -->
        <Grid Grid.Row="1" Grid.Column="0">
            <ToggleButton x:Name="ButtonShowTop" Content="最前面に表示" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="85" Checked="ButtonShowTopChecked" Unchecked="ButtonShowTopUnChecked"/>
        </Grid>
    </Grid>
</Window>
